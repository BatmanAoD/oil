-- AST for pgen grammar.
-- Constrast with asdl.asdl

module pgen
{
  term = 
    String(string s)            -- '(', etc.
  | Name(string s)              -- expr_stmt
  | Group(term t)               -- (expr stmt)
  | Repeat(term t, int times)   -- foo+, foo* (';' small_stmt)*
  | Optional(term t)            -- ['=' test]
  | Alt(alt* alternatives)      -- '+=' X | '-=' X Y
                                -- | has low precedence

  alt = (term* terms)

  -- Terms are concatenated
  rule = (string lhs, term rhs)

  grammar = (rule* rules)
}
